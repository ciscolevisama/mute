{
  "exportedMediaSourceDataList": {
    "mediaSources": [
      {
        "factoryId": "web-selector",
        "version": 2,
        "arguments": {
          "name": "Mutean 动漫",
          "description": "mutean.com",
          "iconUrl": "https://www.mutean.com/favicon.ico",

          "searchConfig": {
            "searchUrl": "https://www.mutean.com/vodsearch/-------------.html?wd={keyword}",
            "searchUseOnlyFirstWord": false,
            "searchRemoveSpecial": true,
            "searchUseSubjectNamesCount": 1,
            "rawBaseUrl": "https://www.mutean.com",
            "requestInterval": 3000,

            /* ===== 步骤 1：搜索条目（已按真实搜索页验证） ===== */
            "subjectFormatId": "indexed",
            "selectorSubjectFormatIndexed": {
              "selectNames": ".module-card-item-title span",
              "selectLinks": ".module-card-item-title a",
              "preferShorterName": true
            },

            /* ===== 步骤 2：线路 / 剧集 ===== */
            "channelFormatId": "index-grouped",
            "selectorChannelFormatFlattened": {
              "selectChannelNames": ".anthology-tab a",
              "matchChannelName": "^(?<ch>.+?)(\\d+)?$",
              "selectEpisodeLists": ".anthology-list-box",
              "selectEpisodesFromList": "a",
              "matchEpisodeSortFromName": "第\\s*(?<ep>\\d+)"
            },

            "defaultResolution": "1080P",
            "defaultSubtitleLanguage": "CHS",

            "selectMedia": {
              "distinguishSubjectName": true,
              "distinguishChannelName": true
            },

            /* ===== 步骤 3：播放页视频地址 ===== */
            "matchVideo": {
              "enableNestedUrl": true,
              "matchNestedUrl": "^.+(m3u8|vip|xigua\\.php).+\\?",
              "matchVideoUrl": "(^http(s)?:\\/\\/.+\\.(m3u8|mp4|mkv).*)",
              "addHeadersToVideo": {
                "referer": "https://www.mutean.com",
                "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64)"
              }
            }
          }
        }
      }
    ]
  }
}
